      .control-panel
        span.cp-title control panel
        .cp-wrap
          .cp-items
            span.cp-c-title new item
            .cp-i-add-remove
              a.cp-i-add(data-bind='click:newItem')
                i.fa.fa-plus
              a.cp-i-remove(data-bind='click:oneLessItem')
                i.fa.fa-minus
            .cp-i-settings
              .cp-i-s-width
                label(for='fixed')
                  | fixed
                  input(data-bind='checked:flexType', type='radio', name='flexType', value='fixed', checked='')
                label(for='flexy')
                  | flexible
                  input(data-bind='checked:flexType', type='radio', name='flexType', value='flexy')
              label(for='')
                | lorem? 
                input(data-bind='value:loremCount', type='text')
            .cp-actions
              a(href='#', data-bind='click:destroyAll') delete all
              a(href='#', data-bind='click:tourResize') resize box
          .cp-container
            span.cp-c-title container properties
            label
              | flex-direction: 
              select(data-bind='options:flexDirectionOptions, value:cPropsCurrent.flexDirection')
            label
              | flex-wrap: 
              select(data-bind='options:flexWrapOptions, value:cPropsCurrent.flexWrap')
            label
              | justify-content: 
              select(data-bind='options:justifyContentOptions, value:cPropsCurrent.justifyContent')
            label
              | align-items: 
              select(data-bind='options:alignItemsOptions, value:cPropsCurrent.alignItems')
            label
              | align-content: 
              select(data-bind='options:alignContentOptions, value:cPropsCurrent.alignContent')
