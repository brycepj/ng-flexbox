      #message-box.message-box
        span.mb-title tour      
        span.mb-progress(data-bind='text:tourBox.tourProgress')
        p.mb-content(data-bind='html:tourBox.currentMessage')
        a.mb-action(href='#', target='_blank', data-bind='visible:tourBox.hasButton,text:tourBox.currentXText,attr: {href:tourBox.currentXUrl}')
